<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/slika_osobe"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prezime:"
                    android:textSize="25dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ime:"
                    android:textSize="25dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JMBG:"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Broj osobne:"
                    android:textSize="25dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/BojaTeksta" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spol:"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grad:"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresa:"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Å½upanija:"
                    android:textSize="15dp"/>
            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="5dp">

                <TextView
                    android:id="@+id/prezime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nema podataka"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/ime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nema podataka"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/JMBG_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nema podataka"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/broj_osobne_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nema podataka"
                    android:textSize="25dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/BojaTeksta" />

                <TextView
                    android:id="@+id/spol_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nema podataka"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/grad_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nema podataka"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/adresa_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nema podataka"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/zupanija_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nema podataka"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>