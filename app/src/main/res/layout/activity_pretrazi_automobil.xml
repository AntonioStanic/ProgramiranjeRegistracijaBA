<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/gradient"
    tools:context=".PretraziAutomobil">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pretraga_txt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/BojaTeksta"
            android:textColor="@color/BojaTeksta"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="30dp"
            android:ems="10">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite broj registracije XXX-X-XXX"
                android:inputType="textPersonName"
                android:textColor="@color/BojaTeksta"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/pretrazi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/pretraga_txt"
            android:background="@color/midnightblue"
            android:text="PretraÅ¾i"
            android:textColor="@color/bijela" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rezultat_pretrage"
        android:layout_width="match_parent"
        android:layout_height="623dp"
        android:layout_below="@+id/pretraga_txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"/>
</LinearLayout>